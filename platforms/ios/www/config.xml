<?xml version='1.0' encoding='utf-8'?>
<widget id="com.app.lelly" version="0.0.2"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Lelly</name>
    <description>
        Lelly
    </description>
    <author email="apes@at.work" href="http://www.apes-at-work.com/">
        Apes At Work
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="phonegap-version" value="3.7.0"/>
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="orientation" value="portrait" />
    <preference name="auto-hide-splash-screen" value="false" />
    <platform name="android">
    <config-file target="AndroidManifest.xml" parent="/manifest">
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
        <uses-permission android:name="android.permission.READ_PHONE_STATE" />
        <uses-permission android:name="android.permission.READ_CONTACTS" />
        <uses-permission android:name="android.permission.WRITE_CONTACTS" />
        <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    </config-file>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="me.dusty.contacts" spec="0.2.12" source="pgb" />
    <plugin name="z1key.phonegap.plugins.pindialog" source="npm"/>
    <plugin name="cordova-plugin-datepicker" source="npm" />
    <plugin name="org.apache.cordova.network-information" spec="0.2.12" source="pgb" />
    <!--<plugin name="br.com.paveisitemas.splashscreen" spec="2.1.1" source="pgb" />-->
    <plugin name="com.synconset.imagepicker" spec="1.0.4" source="pgb" />
    <plugin name="org.apache.cordova.home" source="npm"/>
    <plugin name="com.teamnemitoff.phonedialer" spec="0.3.0" source="pgb" />
    <plugin name="com.ionic.keyboard" spec="1.0.3" source="pgb" />
    <plugin name="fi.avaus.cordova.geolocation" spec="0.3.11" source="pgb" />
    <plugin name="it.adacto.cordova.device" spec="0.1" source="pgb" />
    <gap:splash platform="android" src="res/screen/android/screen.png" />
    <gap:splash platform="ios" src="res/screen/ios/screen.png"/>

    <allow-intent href="market:*" />
</widget>
