<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Lelly</name>
    <description>
        [Description]
    </description>
    <author email="apes@at.work" href="http://www.apes-at-work.com/">
        Apes At Work
    </author>
    <content src="index.html" />
    <gap:plugin name="cordova-plugin-splashscreen"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="/android_asset/www/res/LellyApp_SplashPage.jpg" density="port-hdpi"/>
        <splash src="/android_asset/www/res/LellyApp_SplashPage.jpg" density="port-ldpi"/>
        <splash src="/android_asset/www/res/LellyApp_SplashPage.jpg" density="port-mdpi"/>
        <splash src="/android_asset/www/res/LellyApp_SplashPage.jpg" density="port-xhdpi"/>
        <preference name="SplashScreen" value="/android_asset/www/res/LellyApp_SplashPage.jpg'" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="Orientation" value="portrait" />
        <preference name="phonegap-version" value="3.6.3"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
